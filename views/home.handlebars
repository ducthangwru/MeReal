<div class="col-sm-6 col-md-9" style="margin-top:1%">
   <div id="vid-box"></div>

    <div class="row" style="margin: 5%">
        <div class="col-sm-6 col-md-6">
        </div>
        <div class="col-sm-6 col-md-6">
            <div id="stream-info" hidden="true">
                <label>Số người đang xem</label>
                <img src="img/person_dark.png" />
                <span id="here-now">0</span>
            </div>
        </div>
    </div>
    
    <div class="row">
        <button id="btnStream" class="btn btn-primary" onclick=" errWrap(stream);" hidden>Stream</button>
        <button id="btnWatch" class="btn btn-danger" onclick=" errWrap(watch);">Xem</button>
        <button class="btn btn-danger" id="end" onclick="end()" hidden="true">End Live</button>
        <!-- <div id="logs" class="ptext" style="background-color:white"></div> -->

        <button id="btnStart" class="btn btn-primary" data-name="start" hidden>Bắt đầu</button>
    </div>

    <div class="row" id="divContent">
    </div>

    <div class="row">
        <div class="form-group" id="divAnswer">
        </div>
    </div>
</div>
<div class="col-sm-6 col-md-3">
    <br>
     <div class="box box-primary direct-chat direct-chat-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Chat</h3>

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <div id="divChat" class="direct-chat-messages">
            </div>
        </div>
        <div class="box-footer">
            <div class="input-group">
                    <input id="inputMessage" type="text" name="message" placeholder="Nhập nội dung..." class="form-control">
                    <span class="input-group-btn">
                            <button id="btnSend" type="button" class="btn btn-primary btn-flat">Gửi</button>
                    </span>
            </div>
        </div>
    </div>
</div>