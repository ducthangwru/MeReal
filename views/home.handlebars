    <div id="logs" class="ptext" style="background-color:white"></div>
</div>
<div class="col-sm-6 col-md-3">
    <br>
     <div class="box box-warning direct-chat direct-chat-warning">
        <div class="box-header with-border">
            <h3 class="box-title">Chat</h3>

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                </button>
            </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <!-- Conversations are loaded here -->
            <div class="direct-chat-messages">
                <div class="direct-chat-msg right">
                    <div class="direct-chat-info clearfix">
                        <span class="direct-chat-name pull-right">{{user.fullname}}</span>
                        <div class="textavatar textavatar-chat pull-right" data-name="{{user.fullname}}"></div> 
                        <span class="direct-chat-timestamp pull-left">05/08/2019 11:11:11</span>
                    </div>

                    <div class="direct-chat-text">Nội dung chat ở đây</div>
                </div>
            </div>
        </div>
        <div class="box-footer">
            <form action="#" method="post">
                <div class="input-group">
                    <input type="text" name="message" placeholder="Type Message ..." class="form-control">
                    <span class="input-group-btn">
                            <button type="button" class="btn btn-warning btn-flat">Send</button>
                          </span>
                </div>
            </form>
        </div>
        <!-- /.box-footer-->
    </div>
</div>